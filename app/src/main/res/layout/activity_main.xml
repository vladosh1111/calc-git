<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/num1"
      android:text="1"
      android:textSize="55dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
    <Button
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:text="2"
        android:textSize="55dp"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintTop_toTopOf="@id/num1"
        />
    <Button
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="55dp"
        android:id="@+id/num3"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintTop_toTopOf="@id/num2"
        />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="4"
      android:textSize="55dp"
      android:id="@+id/num4"
      app:layout_constraintLeft_toLeftOf="@id/num1"
      app:layout_constraintTop_toBottomOf="@id/num1"
      />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/num5"
      android:text="5"
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/num4"
      app:layout_constraintTop_toBottomOf="@id/num2"
    />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/num6"
      android:text="6"
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/num5"
      app:layout_constraintTop_toBottomOf="@id/num3"
    />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="7"
      android:textSize="55dp"
      android:id="@+id/num7"
      app:layout_constraintLeft_toLeftOf="@id/num4"
      app:layout_constraintTop_toBottomOf="@id/num4"
    />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="8"
      android:textSize="55dp"
      android:id="@+id/num8"
      app:layout_constraintLeft_toRightOf="@id/num7"
      app:layout_constraintTop_toBottomOf="@id/num5"
      />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/num9"
      android:text="9"
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/num8"
      app:layout_constraintTop_toBottomOf="@id/num6"
      />
  <Button
      android:textColor="@color/white"
      android:background="@color/black"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/num0"
      android:text="0"
      android:textSize="55dp"
      app:layout_constraintLeft_toLeftOf="@id/num7"
      app:layout_constraintTop_toBottomOf="@id/num7"
      />
  <Button
      android:background="@color/black"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="."
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/num0"
      app:layout_constraintTop_toBottomOf="@id/num8"

      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/result"
      android:text="="
      android:textSize="55dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/reset"
      android:text="c"
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/result"
      app:layout_constraintTop_toTopOf="@id/result"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/clear"
      android:text="d"
      android:textSize="55dp"
      app:layout_constraintLeft_toRightOf="@id/reset"
      app:layout_constraintTop_toTopOf="@id/reset"
      />


</androidx.constraintlayout.widget.ConstraintLayout>